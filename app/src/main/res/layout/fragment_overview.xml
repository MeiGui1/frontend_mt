<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center_horizontal"
                android:text="@string/tools"
                android:textSize="24dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnModel"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_model"
                    android:padding="20dp"
                    android:text="@string/models"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"
                    android:background="@drawable/button_style"/>

                <Button
                    android:id="@+id/btnNotes"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_pen"
                    android:padding="20dp"
                    android:text="@string/notes"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:id="@+id/btnCollections"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_collections"
                    android:padding="20dp"
                    android:text="@string/collections"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPsychosocial"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_psychosocial"
                    android:padding="20dp"
                    android:text="@string/psychosocial"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:id="@+id/btnRecognizer"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_recognizer"
                    android:padding="20dp"
                    android:text="@string/recognizer"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:id="@+id/btnTranslator"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_translator"
                    android:padding="20dp"
                    android:text="@string/translator"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>


            </TableRow>

            <TextView
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="@string/inputs"
                android:textSize="24dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnPain"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_pain"
                    android:padding="20dp"
                    android:text="@string/paindetails"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:id="@+id/btnDiagnosis"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_diagnosis"
                    android:padding="20dp"
                    android:text="@string/diagnosis"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:id="@+id/btnDrugs"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_medication"
                    android:padding="20dp"
                    android:text="@string/drugs"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/btnExercises"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:drawableTop="@drawable/ic_exercises"
                    android:padding="20dp"
                    android:text="@string/exercises"
                    android:textAllCaps="false"
                    android:onClick="openClickedFragment"/>

                <Button
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </TableRow>


        </TableLayout>
    </LinearLayout>

</RelativeLayout>